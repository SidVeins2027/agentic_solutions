{
  "openapi": "3.0.3",
  "info": {
    "title": "ServiceNow Table API - Washington DC",
    "description": "Complete Table API for CRUD operations on ServiceNow tables",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "{server_url}",
      "description": "ServiceNow Instance",
      "variables": {
        "server_url": {
          "default": "https://dev218136.service-now.com",
          "description": "ServiceNow instance URL"
        }
      }
    }
  ],
  "security": [
    {
      "basicAuth": []
    }
  ],
  "components": {
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    },
    "schemas": {
      "ServiceNowRecord": {
        "type": "object",
        "properties": {
          "sys_id": {
            "type": "string"
          },
          "sys_created_on": {
            "type": "string"
          },
          "sys_updated_on": {
            "type": "string"
          },
          "sys_created_by": {
            "type": "string"
          },
          "sys_updated_by": {
            "type": "string"
          }
        }
      },
      "TableResponse": {
        "type": "object",
        "properties": {
          "result": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ServiceNowRecord"
            }
          }
        }
      }
    }
  },
  "paths": {
    "/api/now/table/{table_name}": {
      "get": {
        "summary": "Get records from a table",
        "operationId": "getTableRecords",
        "parameters": [
          {
            "name": "table_name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sysparm_query",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sysparm_limit",
            "in": "query",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "sysparm_fields",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TableResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a record",
        "operationId": "createTableRecord",
        "parameters": [
          {
            "name": "table_name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ServiceNowRecord"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    },
    "/api/now/table/{table_name}/{sys_id}": {
      "get": {
        "summary": "Get a record by sys_id",
        "operationId": "getTableRecord",
        "parameters": [
          {
            "name": "table_name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sys_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      },
      "put": {
        "summary": "Update a record",
        "operationId": "updateTableRecord",
        "parameters": [
          {
            "name": "table_name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sys_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ServiceNowRecord"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated"
          }
        }
      },
      "delete": {
        "summary": "Delete a record",
        "operationId": "deleteTableRecord",
        "parameters": [
          {
            "name": "table_name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sys_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Deleted"
          }
        }
      }
    }
  }
}